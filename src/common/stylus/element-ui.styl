// el-scroll 样式
.scrollbar-wrapper
  overflow-x hidden !important

// to reset element-ui default css
.el-upload
  input[type="file"]
    display none !important

.el-upload__input
  display none

// 暂时性解决diolag 问题 https://github.com/ElemeFE/element/issues/2461
.el-dialog
  position relative
  left 0
  margin 0 auto
  transform none

// 使弹窗居中显示
.el-dialog__wrapper
  display flex
  justify-content center
  align-items Center
  .el-dialog__body
    padding 10px 20px 0 20px

//element ui upload
.upload-container
  .el-upload
    width 100%
    .el-upload-dragger
      width 100%
      height 200px

// 自定义树菜单样式
.six-tree-wrapper
  padding-bottom 8px
  font-size 14px
  .el-tree-node__content
    height 40px
    .el-tree-node__expand-icon
      font-size 16px
  .el-tree--highlight-current .el-tree-node.is-current>.el-tree-node__content
    background-color #409eff
    .custom-tree-node
      color white
      font-weight bold
    >.el-tree-node__label
        color white
        font-weight bold
  .el-tree-node__content:hover
    background #d7eaff

// 自定义内部表格样式
.inside-table-wrapper
  .el-table th.is-leaf
    &:nth-last-child(2)
      border-right none
  .el-table td, .el-table th.is-leaf
    border-right 1px solid #ebeef5
    border-bottom 1px solid #ebeef5
    &:last-child
      border-right none




