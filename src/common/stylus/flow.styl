.form-wrapper
  background #efefef
  overflow hidden
  line-height 14px
  .mce-tinymce
    box-shadow none
  .el-form-item__label
    color #409eff
  .el-form-item__content
    line-height normal
  .el-form
    margin 0 auto
    padding 20px 20px 0 20px
    min-width 1100px
    .header
      display flex
      .title
        flex-grow 1
        margin 0
        .zh
          font-size 24px
          font-weight bold
          line-height 24px
          color #409eff
        .en
          font-size 12px
          line-height 12px
          color #606266
    .explain
      font-size 12px
      line-height 16px
    .footer
      text-align right
.edit-table
  .touch-bar
    display flex
    padding 10px
    align-items center
    background #efefef
    .svg-icon
      margin-right 10px
      font-size 14px
  th
    padding 0
    color #409eff
  td
    padding 0
    .cell
      padding 0
      min-height 32px
      &:first-child
        padding-left 0
      div
        line-height 32px
      span
        display block
        padding 8px 0
        line-height 16px
        white-space pre-line
  .el-input__inner
    padding 0 2px
  .el-textarea__inner
    padding 5px 2px 6px 2px
    height 32px
  .el-table__footer-wrapper
    .cell
      line-height 32px
